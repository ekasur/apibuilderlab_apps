<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <p><label>Current API: <%=currentapi%></label></p>
            <h1>TOTAL RECORD: <%=totalRecord%></h1>

            <form method="POST" action="/search">
                <label>Search</label>
                <input type="text" name="search" required><input type="submit" name="submit" value="Search">
            </form>
            <table class="table table-border list">
                <thead class="thead-dark">
                    <tr>
                    <th>ID</th><th>COUNTRY</th><th>COUNTRY CODE</th><th>CREATED DATE</th><th>#</th>
                    </tr>
                </thead>
                <tbody>
                    <%
                    if ((totalRecord == 0) || (totalRecord == null) || (typeof totalRecord == "undefined") ){
                        %>
                        <tr>
                        <td colspan="6">Data empty!</td>
                        </tr>
                        <%
                    }else{
                    %>

                        <% data.forEach( function(data) { %>
                        <tr>
                            
                        <td>
                            <%= data.id %>
                        </td>
                        <td>
                            <%= data.country_name %>
                        </td>
                        <td>
                            <%= data.country_code %>
                        </td>
                        <td>
                            <%= data.created_datetime.toLocaleString() %>
                        </td>
                        <td>
                            <a href="/details/?id=<%= data.id %>">View Details</a>
                        </td>
                        
                        <% }); %>

                    <%
                    }
                    %>
                </tbody>
            </table>
        </div>
    </div>
</div>